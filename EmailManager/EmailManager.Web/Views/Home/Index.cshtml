@model IEnumerable<EmailViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-3 col-md-3 col-lg-3">
            <div class="card border-0 shadow my-5">
                <div class="card-body p-5 amber-text">
                    <h4>Select option</h4>
                    <div class="dropdown-divider"></div>
                    <a class="nav-link text-dark" asp-controller="Email" asp-action="AllEmails">All emails</a>
                    <div class="dropdown-divider"></div>
                    <a class="nav-link text-dark" asp-controller="Email" asp-action="ShowEmailsByStatus"
                       asp-route-statusName="New Application">New Applications</a>
                    <div class="dropdown-divider"></div>
                    <a class="nav-link text-dark" asp-controller="Email" asp-action="ShowEmailsByStatus"
                       asp-route-statusName="Open Application">Open Applications</a>
                    <div class="dropdown-divider"></div>
                    <a class="nav-link text-dark" asp-controller="Email" asp-action="ShowEmailsByStatus"
                       asp-route-statusName="Invalid Application">Invalid Applications</a>
                    <div class="dropdown-divider"></div>
                    <a class="nav-link text-dark" asp-controller="Email" asp-action="ShowEmailsByStatus"
                       asp-route-statusName="Closed Application">Closed Applications</a>
                </div>
            </div>
        </div>
        <div class="col-sm-9 col-md-9 col-lg-9">
            <div class="card border-0 shadow my-5">
                <div class="card-body p-5 amber-text">
                    <h4>Emails</h4>
                    <div class="dropdown-divider"></div>
                    @foreach (var item in Model)
                    {
                        <div class="row">
                            <a asp-controller="Email" asp-action="Application" asp-route-id="@item.Id" title="Details of email">
                                <label>Sender: @item.Sender</label> <label>From Date: @item.DateReceived</label>
                            </a>
                        </div>
                        <div class="dropdown-divider"></div>

                    }
                </div>
            </div>
        </div>
    </div>
</div>

