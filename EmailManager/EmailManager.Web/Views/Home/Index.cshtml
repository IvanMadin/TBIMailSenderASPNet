@model IEnumerable<EmailViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<link rel="stylesheet" href="~/css/page.css" />
<link rel="stylesheet" href="~/css/theme.css" />

<div class="wrapper">
    <div class="sidebar" data-image="#" data-color="orange">
        <div class="sidebar-wrapper">
            <div class="logo">
                <div style="margin-top:20%; text-align:center">
                    <i class="fas fa-mail-bulk" style="font-size:40px;"></i>
                    <h3>
                        @if (User.IsInRole("Manager"))
                        {
                            <i>Manager Mail</i>
                        }
                        else
                        {
                            <i>Operator mail</i>
                        }
                    </h3>
                </div>
            </div>
            <ul class="nav" style="margin:9%">
                <li class="nav-item active">
                <li>
                    <a class="nav-link" area="" asp-controller="Email" asp-action="AllEmails">
                        <i class="fas fa-inbox"></i>Inbox
                    </a>
                </li>
                <li>
                    <a class="nav-link" area="" asp-controller="Email" asp-action="ShowEmailsByStatus"
                       asp-route-statusName="New Application">
                        <i class="fas fa-envelope"></i>New Applications
                    </a>
                </li>
                <li>
                    <a class="nav-link" area="" asp-controller="Email" asp-action="ShowEmailsByStatus"
                       asp-route-statusName="Open Application">
                        <i class="fas fa-envelope-open-text"></i>Open Applications
                    </a>
                </li>
                <li>
                    <a class="nav-link" area="" asp-controller="Email" asp-action="ShowEmailsByStatus"
                       asp-route-statusName="Closed Application">
                        <i class="far fa-envelope"></i>Closed Applications
                    </a>
                </li>
                <li>
                    <a class="nav-link" area="" asp-controller="Email" asp-action="ShowEmailsByStatus"
                       asp-route-statusName="Invalid Application">
                        <i class="fas fa-times-circle"></i>Invalid Applications
                    </a>
                </li>
                <li class="nav-item active active-pro">
                    <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="UpdateEmails">
                        <i class="fas fa-sync-alt"></i>
                        <p>Refresh emails</p>
                    </a>
                </li>
            </ul>
        </div>
        <div class="sidebar-background"><img src="~/image/sidebar-5.jpg" style="width:260px; height:100%" /></div>
    </div>
    <div class="main-panel">

        <nav class="navbar navbar-expand-lg">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="color:black"><span style="color:#e66b00">TBI</span>Bank</a>
                <div class="divider"></div>
                <div class="collapse navbar-collapse justify-content-end">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item dropdown">


                            @*<a class="nav-link text-dark dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" title="Menu" aria-expanded="false">
                                <i class="fas fa-bars"></i>
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                                <div class="divider"></div>
                                <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Register">Register operator</a>
                            </div>*@
                            <a class="nav-link dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="no-icon" style="color:black">Menu</span>
                            </a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                                <div class="divider"></div>
                                <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Register">Register operator</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <form style="margin-left:18%" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                <button type="submit" class="nav-link btn btn-link text-dark" style="text-align:center">
                                    Logout
                                </button>
                            </form>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
        <div class="content">
            <div class="container-fluid">
                <table id="application-form-div" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th>Email Id</th>
                            <th>Date Received</th>
                            <th>Sender</th>
                            <th>Subject</th>
                            <th>Status</th>
                            <th>Attachments</th>
                            <th>View</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var email in Model)
                        {
                            <tr>
                                <td>
                                    @email.Id
                                </td>
                                <td>
                                    @email.DateReceived
                                </td>
                                <td>
                                    @email.Sender
                                </td>
                                <td>
                                    @email.Subject
                                </td>
                                <td>
                                    @email.EmailStatusName
                                </td>
                                <td>
                                    <i class="fas fa-link" style="font-size:18px; text-align:center"></i>
                                </td>
                                <td>
                                    <div>
                                        <a asp-controller="Email" asp-action="Application" asp-route-id="@email.Id" style="color: #e66b00">Preview email</a>
                                    </div>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>


                <link rel="stylesheet" type="text/css" href="~/css/dataTableStyle.css">


                @section Scripts{


                    <script type="text/javascript" charset="utf8" src="~/js/jquerydatatable.js"></script>
                    <script type="text/javascript" charset="utf8" src="~/js/datatable.js"></script>

                    <script>

                        $(document).ready(function () {
                            $('#application-form-div').DataTable();
                        });
                    </script>
                }
            </div>
        </div>
    </div>
</div>

