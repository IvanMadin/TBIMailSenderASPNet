@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {

        <li class="dropdown">
            <button type="button" class="btn dropdown-toggle" data-toggle="dropdown">
                Menu
            </button>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                @if (User.IsInRole("Manager"))
                {
                    <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register operator</a>
                    <div class="dropdown-divider"></div>
                }

                <a class="nav-link text-dark" asp-controller="Email" asp-action="AllEmails">All emails</a>
                <div class="dropdown-divider"></div>
                <a class="nav-link text-dark" asp-controller="Email" asp-action="ShowEmailsByStatus"
                   asp-route-statusName="New Application">New Applications</a>
                <div class="dropdown-divider"></div>
                <a class="nav-link text-dark" asp-controller="Email" asp-action="ShowEmailsByStatus"
                   asp-route-statusName="Open Application">Open Applications</a>
                <div class="dropdown-divider"></div>
                <a class="nav-link text-dark" asp-controller="Email" asp-action="ShowEmailsByStatus"
                   asp-route-statusName="Invalid Application">Invalid Applications</a>
                <div class="dropdown-divider"></div>
                <a class="nav-link text-dark" asp-controller="Email" asp-action="ShowEmailsByStatus"
                   asp-route-statusName="Closed Application">Closed Applications</a>

                <div class="dropdown-divider"></div>
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                </form>
            </div>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello, @User.Identity.Name!</a>
        </li>
    }
</ul>