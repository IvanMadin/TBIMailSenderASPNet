@model EmailViewModel

@{
    ViewData["Title"] = "Application";
}

<link rel="stylesheet" href="~/css/application.css">
<script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
<script type="text/javascript" src="~/js/application-form.js"></script>

<div class="container">
    <div class="card border-0 shadow my-5">
        <div class="row application-form-holder">
            <div class="col-8 card-body p-5 amber-text">
                <h2>
                    Details for @Model.Sender
                    
                </h2>
                <h6>
                    <a class="btn btn-outline-success" asp-area="" asp-controller="Email" asp-action="EmailStatus" asp-route-emailId="@Model.Id" asp-route-emailStatusId="@Model.EmailStatusId">New Application</a>
                    <a class="btn btn-outline-success" asp-area="" asp-controller="Email" asp-action="UpdateStatusEmail" asp-route-emailId="@Model.Id" asp-route-status="Invalid Application">Invalid Email</a>
                    <input type="button" class="btn btn-outline-success" id="show-or-hide-button-form" value="Show Form">
                </h6>
                <br />
                <div>
                    <dl class="row">
                        <dt class="col-sm-4">
                            @nameof(Model.Sender)
                        </dt>
                        <dd class="col-sm-8">
                            @Model.Sender
                        </dd>
                        <dt class="col-sm-4">
                            @nameof(Model.Subject)
                        </dt>
                        <dd class="col-sm-8">
                            @Model.Subject
                        </dd>
                        <dt class="col-sm-4">
                            @nameof(Model.DateReceived)
                        </dt>
                        <dd class="col-sm-8">
                            @Model.DateReceived
                        </dd>
                        <dt class="col-sm-4">
                            @nameof(Model.Body)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.Raw(Model.Body)
                        </dd>
                        @*<dd class="col-sm-8">
                            <div><a asp-controller="Email" asp-action="EmailStatus" asp-route-emailId="@Model.Id" asp-route-emailStatusId="@Model.EmailStatusId">Mark as Invalid Email</a></div>
                            
                        </dd>*@
                    </dl>
                </div>
            </div>
            <div class="col-4" id="application-form-div">
                <partial name="_AppFormPartial" model="new LoanApplicationViewModel { EmailId = Model.Id }" />
            </div>
        </div>
    </div>
</div>





